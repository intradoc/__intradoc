{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true,

    "compilerOptions": {
      "target": "es2021",
      "lib": ["es2021"],

      "module": "commonjs",
      "esModuleInterop": true,

      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  },

  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,

    "composite": true,

    "rootDir": ".",
    "baseUrl": "packages",

    "paths": {
      "@/*":         ["*"],

      "@cli":        ["cli"],
      "@cli/*":      ["cli/*"],

      "@core":       ["core"],
      "@core/*":     ["core/*"],

      "@intradoc":   ["intradoc"],
      "@intradoc/*": ["intradoc/*"]
    }
  },

  "exclude": [
    "**/node_modules"
  ]
}
